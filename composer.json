{
    "name": "twilio-deved/server-notifications-php",
    "description": "Use Twilio to create SMS alerts so that you never miss a critical issue.",
    "keywords": ["twilio", "SMS", "server", "notifications"],
    "license": "MIT",
    "require": {
        "php": ">=5.4",
        "twilio/sdk": "^5.7",
        "vlucas/phpdotenv": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.6",
        "friendsofphp/php-cs-fixer": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vendor\\Package\\": "tests"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
